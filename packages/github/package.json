{
  "name": "@chronus/github",
  "version": "1.0.3",
  "type": "module",
  "description": "chronus",
  "homepage": "https://github.com/timotheeguerin/chronus#readme",
  "license": "MIT",
  "author": "Microsoft",
  "keywords": [
    "change",
    "changelog",
    "chronus",
    "github",
    "monorepo"
  ],
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./pull-requests": "./dist/pull-requests/index.js",
    "./changelog": "./dist/changelog/index.js"
  },
  "bin": {
    "chronus-github": "./cmd/cli.mjs"
  },
  "files": [
    "cmd",
    "dist"
  ],
  "repository": "timotheeguerin/chronus.git",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "watch": "tsc -p ./tsconfig.build.json --watch",
    "build": "tsc -p ./tsconfig.build.json",
    "clean": "rimraf dist/ .temp/",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest -w"
  },
  "dependencies": {
    "@chronus/chronus": "workspace:*",
    "@octokit/graphql": "^9.0.1",
    "@octokit/rest": "^21.1.1",
    "cross-spawn": "^7.0.6",
    "octokit": "^5.0.3",
    "picocolors": "^1.1.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/node": "^24.2.0",
    "@types/yargs": "^17.0.33",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "typescript": "^5.9.2"
  },
  "bugs": "https://github.com/timotheeguerin/chronus/issues"
}
